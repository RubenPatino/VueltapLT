<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrarDatosPersonales">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="@dimen/dimension_textinput"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="103dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etCorreoElectronico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Correo electronico" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="@dimen/dimension_textinput"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="107dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="* Nombres"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="@dimen/dimension_textinput"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="103dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="* Apellidos" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="@dimen/dimension_textinput"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="103dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="* Teléfono" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout8"
                android:layout_width="@dimen/dimension_textinput"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
                tools:layout_editor_absoluteX="103dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etCedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="* Número de cedula" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="95"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="157dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foto cara delantera" />

                        <ImageView
                            android:id="@+id/imageViewCedula"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/buttonCedula"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:background="@drawable/ic_camera_black"
                            android:onClick="OnClickDniFront" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/success_circle"
                            android:onClick="OnClickDniHelpFront"
                            android:text="?" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="95"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Foto cara trasera" />

                        <ImageView
                            android:id="@+id/imageViewDniBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/buttonDniBack"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:background="@drawable/ic_camera_black"
                            android:onClick="OnClickDniBack" />

                        <Button
                            android:id="@+id/buttonHelpDniBack"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/success_circle"
                            android:onClick="OnClickDniHelpBack"
                            android:text="?" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout10"
                android:layout_width="@dimen/alert_width"
                android:layout_height="match_parent"
                android:layout_weight="95"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
                tools:layout_editor_absoluteX="103dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etDireccion"
                    android:layout_width="@dimen/dimension_textinput"
                    android:layout_height="wrap_content"
                    android:hint="* Dirección" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/imageViewDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="95"
                        app:srcCompat="@android:drawable/ic_menu_gallery" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/buttonDireccion"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_camera_black"
                            android:onClick="OnClickDomicilie" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/success_circle"
                            android:onClick="helpDireccion"
                            android:text="?" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button13"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/boton_redondo"
        android:onClick="OnClickRegistrar"
        android:text="Registrar"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>